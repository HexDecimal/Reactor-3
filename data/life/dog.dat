[TALK]
DESIRES_INTERACTION:NEVER
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:"action"
BATTLE_CRY_ACTION:"@n shows its teeth!"

[JUDGE]
TRUST:IS_SAME_SPECIES{TARGET.TRUST+5},IS_FAMILY{TARGET.TRUST+10},HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}
FACTORS:IS_SAME_SPECIES
BREAK_TRUST:HAS_ATTACKED_TRUSTED{TARGET.DANGER+20}|!IS_FAMILY|!IS_FAMILY,IS_NERVOUS{TARGET.DANGER+5}
NERVOUS:!IS_FAMILY
AGGRAVATED:!IS_FAMILY,%IS_NIGHT

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:NEVER
DESIRES_SHELTER:HAS_CHILD|!HAS_PARENT
REMEMBER_SHELTER:ALWAYS
WHEN_LOST:"FURTHEST"

[GROUP]
WANTS_GROUP_MEMBER:@NEVER
CREATE_GROUP:NEVER

[CAMP]
CAN_CAMP:NEVER

[STATE]
DISCOVER:HAS_CHILD|!HAS_PARENT
EXPLORE:NEVER
FOLLOW:HAS_TARGET_TO_FOLLOW
SURRENDER:NEVER
NEEDS:NEVER
SHELTER:IS_SAFE|!HAS_PARENT
COVER:NEVER
HIDE:NEVER
HIDDEN:NEVER
MANAGING:NEVER

[FOLLOW]
FOLLOW_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER

[SAFETY]
INTIMIDATED:@IS_INCAPACITATED,IS_TARGET

[MEMORY]
TEMP:ALWAYS

[COMBAT]
SEEK_COMBAT_IF:ALWAYS
TRUST_LOWER_THAN:"0"
RANGED:NEVER
RANGED_READY:NEVER
MELEE:*CAN_BITE,*CAN_SCRATCH
MELEE_READY:ALWAYS

#What to use for this engagement. LIMB[arg] or WEAPON
#The bit inside the curly braces defines the type of combat: MELEE or RANGE
USE:LIMB[JAW]{MELEE}

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:CLOSEST

#What we do to the target: KILL, MAIME
TARGET:KILL
