[TALK]
DESIRES_INTERACTION:NEVER
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:"action"
BATTLE_CRY_ACTION:"@n shows its teeth!"

[JUDGE]
TRUST:IS_SAME_SPECIES{TARGET.TRUST+5},IS_FAMILY{TARGET.TRUST+10},HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}
FACTORS:IS_SAME_SPECIES
BREAK_TRUST:HAS_ATTACKED_TRUSTED{TARGET.DANGER+20}|IS_NERVOUS{TARGET.DANGER+5}|IS_AGGRAVATED{TARGET.DANGER+5}
NERVOUS:!IS_FAMILY
AGGRAVATED:!IS_FAMILY,%IS_NIGHT

[MOVEMENT]
FOLLOW:@IS_IDLE,IS_CHILD,!IS_PARENT

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:NEVER
REMEMBER_SHELTER:NEVER
DESIRES_SHELTER:NEVER
WHEN_LOST:"FURTHEST"

[GROUP]
WANTS_GROUP_MEMBER:IS_FAMILY
CREATE_GROUP:ALWAYS

[CAMP]
CAN_CAMP:NEVER

[STATE]
DISCOVER:IS_SAFE
SURRENDER:NEVER
NEEDS:IS_SAFE
SHELTER:IS_SAFE
COVER:NEVER
HIDE:NEVER
HIDDEN:NEVER

[SAFETY]
INTIMIDATED:@IS_INCAPACITATED,IS_TARGET

[MEMORY]
TEMP:ALWAYS

[COMBAT]
SEEK_COMBAT_IF:ALWAYS
TRUST_LOWER_THAN:"0"
RANGED:NEVER
RANGED_READY:NEVER
MELEE:*CAN_BITE,*CAN_SCRATCH
MELEE_READY:ALWAYS

#What to use for this engagement. LIMB[arg] or WEAPON
#The bit inside the curly braces defines the type of combat: MELEE or RANGE
USE:LIMB[JAW]{MELEE}

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:CLOSEST

#What we do to the target: KILL, MAIME
TARGET:KILL
