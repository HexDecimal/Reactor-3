[TALK]
DESIRES_INTERACTION:IS_SAFE
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:NEVER

[JUDGE]
TRUST:!IS_SAME_SPECIES{TARGET.TRUST-15},!IS_SAME_SPECIES{TARGET.DANGER+15},IS_NERVOUS{TARGET.TRUST-1}
FACTORS:@ALWAYS
BREAK_TRUST:@NEVER
NERVOUS:%IS_NIGHT,!IS_FAMILY
IS_THREAT_IF:HAS_ATTACKED_SELF|HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}|!IS_SAME_SPECIES,IS_NERVOUS

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:EXPLORE_UNKNOWN_CHUNKS
REMEMBER_SHELTER:ALWAYS
DESIRES_SHELTER:IS_SAFE,%IS_NIGHT,!IS_IN_GROUP|IS_GROUP_LEADER,!IS_GROUP_MOTIVATED_FOR_CRIME|IS_IN_GROUP,GROUP_HAS_SHELTER,!%IS_NIGHT,IS_GROUP_MOTIVATED_FOR_CRIME
WHEN_LOST:"FURTHEST"

[FOLLOW]
FOLLOW_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER,IS_AWAKE

[GUARD]
GUARD_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER,!IS_AWAKE

[GROUP]
WANTS_GROUP_MEMBER:@NEVER
CREATE_GROUP:@NEVER

[CAMP]
CAN_CAMP:@NEVER

[SAFETY]
INTIMIDATED:@NEVER

[MEMORY]
CACHE_DROP:"investigate_chunk"

[ITEMS]
GUN:"equip"

[COMBAT]
SEEK_COMBAT_IF:%IS_NIGHT
TRUST_LOWER_THAN:"-3"
RANGED:NEVER
RANGED_READY:NEVER
MELEE:ALWAYS
MELEE_READY:ALWAYS

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:"CLOSEST"
