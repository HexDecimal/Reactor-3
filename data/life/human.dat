[TALK]
DESIRES_INTERACTION:IS_SAFE
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:NEVER

[JUDGE]
TRUST:!IS_SAME_SPECIES{TARGET.TRUST-15},!IS_SAME_SPECIES{TARGET.DANGER+15},IS_NERVOUS{TARGET.TRUST-1}
FACTORS:IS_COMPATIBLE_WITH
BREAK_TRUST:HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}
#,IS_NERVOUS{TARGET.DANGER+5}
#BREAK_TRUST_PERMANENT:IS_NERVOUS{TARGET.TRUST}
NERVOUS:!CAN_TRUST{TARGET.TRUST-5},!IS_SAFE_IN_SHELTER

[MOVEMENT]
FOLLOW:@IS_IDLE,IS_CHILD,!IS_PARENT

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:EXPLORE_UNKNOWN_CHUNKS
REMEMBER_SHELTER:ALWAYS
DESIRES_SHELTER:IS_SAFE,%IS_NIGHT
WHEN_LOST:"FURTHEST"

#Not handled
[STATE]
SHELTER:IS_SAFE
NEEDS:IS_SAFE,@CURRENT_CHUNK_HAS_FLAG{flag=shelter}
#CAN_IDLE:IS_SAFE,HAS_SHELTER

[GROUP]
WANTS_GROUP_MEMBER:IS_COMPATIBLE_WITH
CREATE_GROUP:@IS_BORN_LEADER

[CAMP]
CAN_CAMP:ALWAYS

[SAFETY]
CAN_HIDE:HAS_TARGETS,HAS_VISIBLE_TARGETS


[COMBAT]
RANGED:!NEEDS_COVER,WEAPON_EQUIPPED_AND_READY
RANGED_READY:PREPARE_FOR_RANGED
MELEE:NEVER
MELEE_READY:NEVER

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:CLOSEST

#What we do to the target: KILL, MAIME
TARGET:KILL
