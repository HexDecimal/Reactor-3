[GOAL_DISCOVER]
TIER:"RELAXED"
DESIRE:HAS_NON_RELAXED_GOAL
ACTIONS:"WANDER"

[GOAL_LOOT]
TIER:"SURVIVAL"
DESIRE:!HAS_NEEDS
ACTIONS:"PICK_UP_NEEDED_ITEMS","WANDER"

[ACTION_WANDER]
SATISFIES:HAS_NON_RELAXED_GOAL
STATE:WANDER

[ACTION_PICK_UP_NEEDED_ITEMS]
#CONDITIONS:"EMPTY_HANDS"
CONTEXT:HAS_NEEDS_TO_MEET
STATE:PICK_UP_NEEDED_ITEMS

#[ACTION_PICK_UP_NEEDED_ITEMS]
#CONDITIONS:SEES_NEEDED_ITEM

#HAS_NON_RELAXED_GOAL

[TALK]
DESIRES_INTERACTION:IS_SAFE
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:NEVER

[JUDGE]
TRUST:!IS_SAME_SPECIES{TARGET.TRUST-15},!IS_SAME_SPECIES{TARGET.DANGER+15},IS_NERVOUS{TARGET.TRUST-1}
FACTORS:@ALWAYS
BREAK_TRUST:IS_TRAITOR{TARGET.DANGER+5}|HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}|IS_TARGET_GROUP_HOSTILE{TARGET.DANGER+5}
NERVOUS:!CAN_TRUST{TARGET.TRUST-5},!IS_SAFE_IN_SHELTER
IS_THREAT_IF:HAS_ATTACKED_SELF|HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}|IS_TARGET_GROUP_HOSTILE{TARGET.DANGER+5}|IS_TARGET_HOSTILE|!IS_IN_SAME_GROUP,@IS_PSYCHOTIC

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:EXPLORE_UNKNOWN_CHUNKS
REMEMBER_SHELTER:ALWAYS
DESIRES_SHELTER:IS_SAFE,%IS_NIGHT,!IS_IN_GROUP|IS_GROUP_LEADER,!IS_GROUP_MOTIVATED_FOR_CRIME|IS_IN_GROUP,GROUP_HAS_SHELTER,!%IS_NIGHT,IS_GROUP_MOTIVATED_FOR_CRIME
WHEN_LOST:"FURTHEST"

[FOLLOW]
FOLLOW_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER,IS_AWAKE

[GUARD]
GUARD_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER,!IS_AWAKE

[GROUP]
WANTS_GROUP_MEMBER:@ALWAYS
CREATE_GROUP:@IS_BORN_LEADER

[CAMP]
CAN_CAMP:ALWAYS

[SAFETY]
INTIMIDATED:IS_COMBAT_READY,IS_AWAKE,!IS_DEAD,IS_SAME_SPECIES,@IS_INCAPACITATED,TARGET_IS_COMBAT_READY|IS_COMBAT_READY,IS_AWAKE,!IS_DEAD,!@WEAPON_EQUIPPED_AND_READY,IS_COMBAT_TARGET,TARGET_IS_COMBAT_READY,IS_SAME_SPECIES

[MEMORY]
CACHE_DROP:"investigate_chunk"

[ITEMS]
GUN:"equip"

[COMBAT]
SEEK_COMBAT_IF:WEAPON_EQUIPPED_AND_READY
TRUST_LOWER_THAN:"-3"
RANGED:WEAPON_EQUIPPED_AND_READY
RANGED_READY:PREPARE_FOR_RANGED
MELEE:NEVER
MELEE_READY:NEVER

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:"CLOSEST"
