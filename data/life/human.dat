[TALK]
DESIRES_INTERACTION:IS_SAFE
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:NEVER

[JUDGE]
TRUST:!IS_SAME_SPECIES{TARGET.TRUST-15},!IS_SAME_SPECIES{TARGET.DANGER+15},IS_NERVOUS{TARGET.TRUST-1}
FACTORS:@ALWAYS
BREAK_TRUST:IS_TRAITOR{TARGET.DANGER+5}|HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}|!IS_TARGET_GROUP_FRIENDLY{TARGET.DANGER+5}
NERVOUS:!CAN_TRUST{TARGET.TRUST-5},!IS_SAFE_IN_SHELTER
IS_THREAT_IF:HAS_ATTACKED_SELF|HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}|!IS_TARGET_GROUP_FRIENDLY{TARGET.DANGER+5}

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:EXPLORE_UNKNOWN_CHUNKS
REMEMBER_SHELTER:ALWAYS
DESIRES_SHELTER:IS_SAFE,%IS_NIGHT|IS_GROUP_LEADER,%IS_NIGHT
WHEN_LOST:"FURTHEST"

[FOLLOW]
FOLLOW_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER,IS_AWAKE

[GUARD]
GUARD_TARGET_IF:IS_IN_SAME_GROUP,IS_TARGET_GROUP_LEADER,!IS_AWAKE

[STATE]
COMBAT:HAS_READY_COMBAT_TARGETS
HUNT:HAS_THREATS
DISCOVER:IS_SAFE,HAS_NEEDS_TO_MEET|IS_SAFE,HAS_UNMET_NEEDS|HAS_NEEDS_TO_MEET|IS_GROUP_LEADER,!GROUP_HAS_SHELTER
EXPLORE:IS_SAFE,!%IS_NIGHT,!HAS_NEEDS_TO_MEET
FOLLOW:HAS_TARGET_TO_FOLLOW
SHELTER:!HAS_READY_COMBAT_TARGETS
NEEDS:!HAS_READY_COMBAT_TARGETS,HAS_NEEDS_TO_MEET
SURRENDER:!IS_SAFE,IS_INTIMIDATED,IS_SITUATION_TENSE,!IS_CONFIDENT
#!IS_SAFE
HIDE:HAS_READY_COMBAT_TARGETS,!@WEAPON_EQUIPPED_AND_READY,!IS_CONFIDENT
HIDDEN:HAS_READY_COMBAT_TARGETS,!HAS_VISIBLE_TARGETS,!@WEAPON_EQUIPPED_AND_READY,!IS_CONFIDENT
COVER:HAS_READY_COMBAT_TARGETS,@DANGER_CLOSE,IS_INTIMIDATED
MANAGING:!HAS_READY_COMBAT_TARGETS,!WEAPON_EQUIPPED_AND_READY,HAS_USABLE_WEAPON
GUARD:HAS_TARGET_TO_GUARD
#IS_BEING_SURRENDERED_TO

[GROUP]
WANTS_GROUP_MEMBER:@ALWAYS
CREATE_GROUP:@IS_BORN_LEADER

[CAMP]
CAN_CAMP:ALWAYS

[SAFETY]
INTIMIDATED:IS_COMBAT_READY,IS_AWAKE,!IS_DEAD,IS_SAME_SPECIES,@IS_INCAPACITATED,TARGET_IS_COMBAT_READY|IS_COMBAT_READY,IS_AWAKE,!IS_DEAD,!@WEAPON_EQUIPPED_AND_READY,IS_COMBAT_TARGET,TARGET_IS_COMBAT_READY,IS_SAME_SPECIES

[MEMORY]
CACHE_DROP:"investigate_chunk"

[ITEMS]
GUN:"equip"

[COMBAT]
SEEK_COMBAT_IF:WEAPON_EQUIPPED_AND_READY
TRUST_LOWER_THAN:"-3"
RANGED:WEAPON_EQUIPPED_AND_READY
RANGED_READY:PREPARE_FOR_RANGED
MELEE:NEVER
MELEE_READY:NEVER

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:"CLOSEST"
