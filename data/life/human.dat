[TALK]
DESIRES_INTERACTION:IS_SAFE
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:NEVER

[JUDGE]
TRUST:!IS_SAME_SPECIES{TARGET.TRUST-15},!IS_SAME_SPECIES{TARGET.DANGER+15},IS_NERVOUS{TARGET.TRUST-1}
FACTORS:IS_COMPATIBLE_WITH
BREAK_TRUST:HAS_ATTACKED_TRUSTED{TARGET.DANGER+5}
NERVOUS:!CAN_TRUST{TARGET.TRUST-5},!IS_SAFE_IN_SHELTER

[MOVEMENT]
FOLLOW:@IS_IDLE,IS_CHILD,!IS_PARENT

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:EXPLORE_UNKNOWN_CHUNKS
REMEMBER_SHELTER:ALWAYS
DESIRES_SHELTER:IS_SAFE,%IS_NIGHT
WHEN_LOST:"FURTHEST"

[STATE]
DISCOVER:!HAS_READY_COMBAT_TARGETS
SHELTER:IS_SAFE
NEEDS:!HAS_READY_COMBAT_TARGETS
SURRENDER:!IS_SAFE,IS_INTIMIDATED
#!IS_SAFE
HIDE:HAS_READY_COMBAT_TARGETS,!@WEAPON_EQUIPPED_AND_READY
HIDDEN:HAS_READY_COMBAT_TARGETS,!HAS_VISIBLE_TARGETS
COVER:HAS_READY_COMBAT_TARGETS,@DANGER_CLOSE,IS_INTIMIDATED
MANAGING:!HAS_READY_COMBAT_TARGETS,!WEAPON_EQUIPPED_AND_READY,HAS_USABLE_WEAPON

[GROUP]
WANTS_GROUP_MEMBER:IS_COMPATIBLE_WITH
CREATE_GROUP:@IS_BORN_LEADER

[CAMP]
CAN_CAMP:ALWAYS

[SAFETY]
INTIMIDATED:IS_SAME_SPECIES,@IS_INCAPACITATED,IS_TARGET,!@IS_CONFIDENT,TARGET_IS_COMBAT_READY|!@WEAPON_EQUIPPED_AND_READY,IS_COMBAT_TARGET,TARGET_IS_COMBAT_READY,IS_SAME_SPECIES

[MEMORY]
CACHE_DROP:"investigate_chunk"

[ITEMS]
GUN:"equip"

[COMBAT]
TRUST_LOWER_THAN:"-3"
RANGED:WEAPON_EQUIPPED_AND_READY
RANGED_READY:PREPARE_FOR_RANGED
MELEE:NEVER
MELEE_READY:NEVER

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:"CLOSEST"
