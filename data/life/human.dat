[GROUP]
WANTS_GROUP_MEMBER:IS_COMPATIBLE_WITH

[CAMP]
CAN_CAMP:ALWAYS

[COMBAT]
RANGED:WEAPON_EQUIPPED_AND_READY
RANGED_READY:PREPARE_FOR_RANGED
MELEE:NEVER
MELEE_READY:NEVER

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:CLOSEST

#What we do to the target: KILL, MAIME
TARGET:KILL
