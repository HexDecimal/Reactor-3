[TALK]
DESIRES_INTERACTION:NEVER
DESIRES_CONVERSATION_WITH:IS_SAME_SPECIES
CAN_TALK_TO:IS_SAME_SPECIES
BATTLE_CRY:"action"
BATTLE_CRY_ACTION:"@n lurches forward."

[JUDGE]
TRUST:IS_SAME_SPECIES{TARGET.TRUST+5}
FACTORS:IS_SAME_SPECIES
BREAK_TRUST:IS_NERVOUS{TARGET.DANGER+6}
NERVOUS:@NEVER
AGGRAVATED:%IS_NIGHT,!IS_SAME_SPECIES

[MOVEMENT]
FOLLOW:@NEVER

[SEARCH]
JUDGE:*DISTANCE_TO_POS

[DISCOVER]
DISCOVER_TYPE:NEVER
REMEMBER_SHELTER:NEVER
DESIRES_SHELTER:NEVER
WHEN_LOST:"FURTHEST"

[GROUP]
WANTS_GROUP_MEMBER:@NEVER
CREATE_GROUP:NEVER

[CAMP]
CAN_CAMP:NEVER

[STATE]
EXPLORE:ALWAYS
DISCOVER:NEVER
SURRENDER:NEVER
NEEDS:NEVER
SHELTER:IS_SAFE
COVER:NEVER
HIDE:NEVER
HIDDEN:NEVER

[SAFETY]
INTIMIDATED:NEVER

[MEMORY]
TEMP:ALWAYS

[COMBAT]
SEEK_COMBAT_IF:ALWAYS
TRUST_LOWER_THAN:"0"
RANGED:NEVER
RANGED_READY:NEVER
MELEE:*CAN_BITE,*CAN_SCRATCH
MELEE_READY:ALWAYS

#What to use for this engagement. LIMB[arg] or WEAPON
#The bit inside the curly braces defines the type of combat: MELEE or RANGE
USE:LIMB[JAW]{MELEE}

#What target we engage (CLOSEST, HIGHEST, LOWEST)
ENGAGE:CLOSEST

#What we do to the target: KILL, MAIME
TARGET:KILL
